# CA1032: Implement standard exception constructors - not always needed
dotnet_diagnostic.CA1032.severity = suggestion

# CA1034: Nested types should not be visible - sometimes useful for builders
dotnet_diagnostic.CA1034.severity = suggestion

# CA1040: Avoid empty interfaces - marker interfaces are sometimes useful
dotnet_diagnostic.CA1040.severity = suggestion

# CA1054/CA1055/CA1056: URI parameters/return values/properties should not be strings
dotnet_diagnostic.CA1054.severity = suggestion
dotnet_diagnostic.CA1055.severity = suggestion
dotnet_diagnostic.CA1056.severity = suggestion

# CA1062: Validate arguments of public methods - use nullable reference types instead
dotnet_diagnostic.CA1062.severity = none

# CA1303: Do not pass literals as localized parameters - not always needed
dotnet_diagnostic.CA1303.severity = none

# CA1308: Normalize strings to uppercase - ToLowerInvariant is often fine
dotnet_diagnostic.CA1308.severity = suggestion

# CA1707: Identifiers should not contain underscores - conflicts with our naming
dotnet_diagnostic.CA1707.severity = none

# CA1711: Identifiers should not have incorrect suffix - too strict
dotnet_diagnostic.CA1711.severity = suggestion

# CA1716: Identifiers should not match keywords - sometimes unavoidable
dotnet_diagnostic.CA1716.severity = suggestion

# CA1720: Identifiers should not contain type names - sometimes appropriate
dotnet_diagnostic.CA1720.severity = suggestion

# CA1724: Type names should not match namespaces - sometimes unavoidable
dotnet_diagnostic.CA1724.severity = suggestion

# CA1805: Do not initialize unnecessarily - explicit initialization is clearer
dotnet_diagnostic.CA1805.severity = none

# CA1812: Avoid uninstantiated internal classes - DI containers instantiate these
dotnet_diagnostic.CA1812.severity = none

# CA1848: Use LoggerMessage delegates - too verbose for simple logging
dotnet_diagnostic.CA1848.severity = suggestion

# CA1852: Seal internal types - good practice but not always necessary
dotnet_diagnostic.CA1852.severity = suggestion

# CA2007: Do not directly await a Task - .NET Core doesn't need ConfigureAwait
dotnet_diagnostic.CA2007.severity = none

# CA2225: Operator overloads have named alternates - not always needed
dotnet_diagnostic.CA2225.severity = suggestion

# CA2227: Collection properties should be read only - sometimes needed for serialization
dotnet_diagnostic.CA2227.severity = suggestion

# =============================================================================
# CUSTOM ANALYZERS (Medley.Analyzers)
# =============================================================================
# Placeholder for project-specific analyzer rules.
# Add rules here as custom analyzers are developed.
#
# Example:
# dotnet_diagnostic.MEDLEY001.severity = warning
# dotnet_diagnostic.MEDLEY002.severity = error

# =============================================================================
# XML / MSBUILD FILES
# =============================================================================
[*.{xml,xsd,xsl,xslt,config,props,targets,nuspec,resx,ruleset,vsixmanifest,vsct}]
indent_size = 2

[*.{csproj,vbproj,vcxproj,vcxproj.filters,proj,projitems,shproj,dcproj,fsproj}]
indent_size = 2

[*.sln]
indent_style = tab
end_of_line = crlf

[*.slnx]
indent_style = space
indent_size = 2
end_of_line = lf

# =============================================================================
# JSON / YAML FILES
# =============================================================================
[*.{json,jsonc}]
indent_size = 2

[*.{yaml,yml}]
indent_size = 2

# =============================================================================
# WEB FILES
# =============================================================================
[*.{html,htm,cshtml,razor}]
indent_size = 2

[*.{css,scss,sass,less}]
indent_size = 2

[*.{js,jsx,mjs,cjs}]
indent_size = 2

[*.{ts,tsx,mts,cts}]
indent_size = 2

[*.vue]
indent_size = 2

# =============================================================================
# DOCUMENTATION
# =============================================================================
[*.md]
indent_size = 2
trim_trailing_whitespace = false

[*.txt]
indent_size = 4

# =============================================================================
# DATA / QUERY FILES
# =============================================================================
[*.sql]
indent_size = 4

[*.proto]
indent_size = 2

[*.graphql]
indent_size = 2

# =============================================================================
# SCRIPT FILES
# =============================================================================
[*.ps1]
indent_size = 4
end_of_line = lf

[*.{sh,bash,zsh}]
indent_size = 4
end_of_line = lf

[*.{cmd,bat}]
indent_size = 4
end_of_line = crlf

# =============================================================================
# CONFIGURATION FILES
# =============================================================================
[*.{env,env.*}]
indent_size = 4

[Dockerfile*]
indent_size = 4

[docker-compose*.{yml,yaml}]
indent_size = 2

[*.toml]
indent_size = 2

[*.ini]
indent_size = 4

# =============================================================================
# .NET ASPIRE / AZURE FILES
# =============================================================================
[*.bicep]
indent_size = 2

[*.tf]
indent_size = 2

[*.tfvars]
indent_size = 2
